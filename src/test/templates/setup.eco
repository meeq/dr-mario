<div class="center">
  <div class="global">
    <form name="global">
      <h2>Sound Effects</h2>
      <% for option in @soundOptions: %>
      <input type="radio"
             name="sound"
             value="<%= option %>"
             <%= 'checked' if option is 'off' %>
             />
      <% end %>
      <h2>Music Type</h2>
      <% for option in @musicOptions: %>
      <input type="radio"
             name="music"
             value="<%= option %>"
             <%= 'checked' if option is @music %>
             />
      <% end %>
    </form>
  </div>
  <ul class="players">
    <% for playerName, player of @players: %>
      <li class="player">
        <form name="<%= playerName %>">
          <h2>Level</h2>
          <input type="range"
                 name="level"
                 min="0"
                 max="20"
                 value="<%= player.level %>"
                 />
          <h2>Speed</h2>
          <% for speed in @speedOptions: %>
            <input type="radio"
                   name="speed"
                   value="<%= speed %>"
                   <%= 'checked' if speed is player.speed %>
                   />
          <% end %>
          <h2>Controls</h2>
          <div class="controls">
            <% for controlName, keyCode of player.controls: %>
              <button type="button" name="<%= controlName %>">
                <%= @eventCharacter keyCode %>
              </button>
            <% end %>
          </div>
          <button type="submit">Ready?</button>
        </form>
      </li>
    <% end %>
  </ul>
</div>
