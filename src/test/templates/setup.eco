<div class="center">
  <div class="global">
    <form name="global">
      <h2>Sound Effects</h2>
      <% for option in @soundOptions: %>
        <input type="radio"
               name="sound"
               id="sound-<%= option %>"
               value="<%= option %>"
               <%= 'checked' if option is 'off' %>
               />
        <label for="sound-<%= option %>"></label>
      <% end %>
      <h2>Music Type</h2>
      <% for option in @musicOptions: %>
        <input type="radio"
               name="music"
               id="music-<%= option %>"
               value="<%= option %>"
               <%= 'checked' if option is @music %>
               />
        <label for="music-<%= option %>"></label>
      <% end %>
    </form>
  </div>
  <ul class="players">
    <% for playerName, player of @players: %>
      <li class="player">
        <form name="<%= playerName %>">
          <h2>Level</h2>
          <input type="range"
                 name="level"
                 min="0"
                 max="20"
                 value="<%= player.level %>"
                 />
          <h2>Speed</h2>
          <% for option in @speedOptions: %>
            <input type="radio"
                   name="speed"
                   id="speed-<%= option %>"
                   value="<%= option %>"
                   <%= 'checked' if option is player.speed %>
                   />
            <label for="speed-<%= option %>"></label>
          <% end %>
          <h2>Controls</h2>
          <div class="controls">
            <% for controlName, keyCode of player.controls: %>
              <button type="button" name="<%= controlName %>">
                <%= @eventCharacter keyCode %>
              </button>
            <% end %>
          </div>
          <button type="submit">Ready?</button>
        </form>
      </li>
    <% end %>
  </ul>
</div>
