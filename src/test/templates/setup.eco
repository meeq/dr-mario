<!-- Global Setup
<h2>Music</h2>
<input type="radio" name="music" value="fever" checked />
<input type="radio" name="music" value="chill" />
<input type="radio" name="music" value="off" />
-->
<ul>
  <% for player in @players: %>
    <li>
      <form name="P<%= player.number %>">
        <h2>Level</h2>
        <input type="range" name="level" min="0" max="20" value="10">
        <h2>Speed</h2>
        <input type="radio" name="speed" value="lo" />
        <input type="radio" name="speed" value="med" checked />
        <input type="radio" name="speed" value="hi" />
        <h2>Controls</h2>
        <div class="controls">
          <button type="button" name="Move Left"></button>
          <button type="button" name="Move Right"></button>
          <button type="button" name="Flip Left"></button>
          <button type="button" name="Flip Right"></button>
          <button type="button" name="Fast Drop"></button>
          <button type="button" name="Instant Drop"></button>
        </div>
        <button type="submit">Ready?</button>
      </form>
    </li>
  <% end %>
</ul>
