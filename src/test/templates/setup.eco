<!-- Global Setup
<h2>Music</h2>
<input type="radio" name="music" value="fever" checked />
<input type="radio" name="music" value="chill" />
<input type="radio" name="music" value="off" />
-->
<ul>
  <% for playerName, player of @players: %>
    <li>
      <form name="<%= playerName %>">
        <h2>Level</h2>
        <input type="range"
               name="level"
               min="0"
               max="20"
               value="<%= player.level %>"
               />
        <h2>Speed</h2>
        <% for speed in @speedOptions: %>
          <input type="radio"
                 name="speed"
                 value="<%= speed %>"
                 <%= 'checked' if speed is player.speed %>
                 />
        <% end %>
        <h2>Controls</h2>
        <div class="controls">
          <% for controlName, keyCode of player.controls: %>
            <button type="button" name="<%= controlName %>">
              <%= @eventCharacter keyCode %>
            </button>
          <% end %>
        </div>
        <button type="submit">Ready?</button>
      </form>
    </li>
  <% end %>
</ul>
